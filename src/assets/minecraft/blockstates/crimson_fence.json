{
    "multipart": [
        {   "apply": { "model": "block/crimson_fence_post" }},
        {   "when": { "north": "true" },
            "apply": { "model": "block/crimson_fence_side", "uvlock": true }
        },
        {   "when": { "east": "true" },
            "apply": { "model": "block/fences/crimson_fence_side_ew", "uvlock": true }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "block/crimson_fence_side", "y": 180, "uvlock": true }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "block/fences/crimson_fence_side_ew", "y": 180, "uvlock": true }
        }
    ]
}
